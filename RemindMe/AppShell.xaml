<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RemindMe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RemindMe"
    Shell.FlyoutBehavior="Disabled"
    Title="RemindMe">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:CreateRoomPage}"
        Route="CreateRoomPage"
        />
    
    <ShellContent
        ContentTemplate="{DataTemplate local:JoinRoomPage}"
        Route="JoinRoomPage"
        />

    <ShellContent
        ContentTemplate="{DataTemplate local:ScheduleVideoPage}"
        Route="ScheduleVideoPage"
        />

</Shell>

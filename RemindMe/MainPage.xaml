<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemindMe.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button
                x:Name="CreateRoom"
                Text="I am a Caregiver" 
                SemanticProperties.Hint="Generates a modal for users who will send videos to create a room"
                Clicked="OnCreateRoomClicked"
                HorizontalOptions="Fill"
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="1"
                FontSize="Large"/>
        <Button
                x:Name="JoinRoom"
                Text="I Need Reminders" 
                SemanticProperties.Hint="Generates a modal for users who need help with reminders to join a room"
                Clicked="OnCreateRoomClicked"
                HorizontalOptions="Fill"
                Grid.Row="3"
                Grid.RowSpan="1"
                Grid.Column="1"
                FontSize="Large"/>
    </Grid>
    
</ContentPage>

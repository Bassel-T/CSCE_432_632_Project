<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemindMe.AssistedRoom">
    <VerticalStackLayout>

        <ImageButton
        x:Name="SwapUsersButton"
        Source="swap.svg"
        WidthRequest="50"
        HeightRequest="50"
        BackgroundColor="{StaticResource Primary}"
        CornerRadius="25"
        Margin="0, 20, 20, 0"
        HorizontalOptions="End"
        Aspect="Center"
        Clicked="SwapRole"/>

        <Button
            Text="View Latest Video"
            HorizontalOptions="Center"
            HeightRequest="75"
            FontSize="Large"
            SemanticProperties.Hint="Watch the latest video you've received"
            Margin="0, 250, 0, 0"
            Clicked="WatchLatestVideo"
            />
    </VerticalStackLayout>
</ContentPage>